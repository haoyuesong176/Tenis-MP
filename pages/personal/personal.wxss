.container {
    margin-top: 180rpx;
}

.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* background-color: rgb(222, 248, 151);  */
    padding-inline: 40rpx;
}

.qrcode {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
}

.qrcode-icon {
    display: flex;
    width: 40rpx;
    height: 40rpx;
}

.user-info {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 150rpx;
}


.avatar-btn {
    height: 120rpx;
    border: none;
    padding: 0;
    margin-right: 20rpx;
    border-radius: 50%;
}

.avatar-container {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}


.user-details {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.name {
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}

.level-and-balance {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    /* background-color: wheat; */
    padding-inline: 40rpx;
    margin-top: 10rpx
}

.level {
    width: 80%;
    height: 100rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    margin-right: 50rpx;
}

.level-title {
    font-size: 28rpx;
    font-weight: 400;
}

.level-detail {
    font-size: 22rpx;
    color: rgb(100, 100, 100);
}

.progress-box {
    width: 100%;
    height: 100rpx;
    /* background-color: #88B9DA; */
    margin-top: 10rpx;
}

.balance-info {
    width: 20%;
    height: 100rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
}

.balance {
    font-size: 34rpx;
    /* background-color: aqua; */
}

.balance-footnote {
    font-size: 22rpx;
    color: rgb(100, 100, 100);
}

/* 日程模块 */

.activity-container {
    margin-top: 50rpx;
    padding-inline: 30rpx;
}

.activity-heading {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    padding: 10rpx;
}

.activity-scroll {
    margin-top: 20rpx;
    white-space: nowrap;
    overflow: hidden;
}

.activity-item-wrapper {
    display: inline-block;
    width: 300rpx;
    height: 200rpx;
    margin-right: 30rpx;
    background-color: rgb(248, 248, 248);
}

.booked {
    border-left: 5px solid rgb(156, 211, 156);
}

.matching {
    border-left: 5px solid rgb(156, 186, 211);
}

.matched {
    border-left: 5px solid rgb(255, 206, 160);
}

.activity-item {
    display: flex;
    flex-direction: column;
    /* background-color: yellow; */
    height: 100%;
}

.activity-item-label {
    padding-inline: 12rpx;
    padding-top: 12rpx;
    padding-bottom: 6rpx;
    font-size: 24rpx;
    font-weight: 400;
}

.activity-item-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    padding: 10rpx;
    /* background-color: violet; */
    height: 100%;
}

.activity-item-content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    /* background-color: yellow; */
    width: 100%;
}

.activity-item-content-time-and-field {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    font-size: 20rpx;
    color: grey;
    /* background-color: wheat; */
}

.activity-item-content-avatar-container {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
}

.activity-item-content-avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.activity-item-btn-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    /* background-color: yellow; */
}

.activity-item-btn {
    color: white;
    background-color: black;
    font-size: 20rpx;
    padding-block: 4rpx;
    padding-inline: 100rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.divider {
    height: 1px; 
    background-color: #a7e277; 
    /* background-color: black; */
    margin-inline: 20rpx;
    margin-block: 5rpx;
}


/* 功能服务 */

.function {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin-top: 30rpx;
}

.function-title {
    font-size: 30rpx;
    margin-left: 40rpx;
}

.function-grid {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.row {
    display: flex;
    justify-content: space-between;
    /* margin-bottom: 10rpx; */
    /* margin-inline: 200rpx; */
    width: 100%;
}

.module {
    /* flex: 1; */
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    /* text-align: center; */
    margin: 0 10rpx;
    width: 50%;
}

.module-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 15rpx;
}

.module-text {
    font-size: 22rpx;
}