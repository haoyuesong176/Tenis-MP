.settings-list {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 42rpx;
    /* border-bottom: 1px solid #e5e5e5; */
}

.item-name {
    font-size: 30rpx;
    flex: 1;
}

.item-content {
    display: flex;
    justify-content: flex-start;
    font-size: 28rpx;
    flex: 2.4;
    color: rgb(87, 87, 87);
    /* background-color: green; */
}

.item-chevron {
    height: 20rpx;
    width: 14rpx;
}

.avatar-btn-container {
    height: 100rpx;
    width: 100rpx;
}

.avatar-btn {
    height: 100rpx;
    width: 100rpx;
    border: none;
    padding: 0;
    border-radius: 50%;
}

.avatar-container {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}