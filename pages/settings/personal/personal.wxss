.settings-list {
    display: flex;
    flex-direction: column;
    padding: 20rpx;
}

.item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 42rpx;
    /* border-bottom: 1px solid #e5e5e5; */
}

.item-name {
    font-size: 28rpx;
    flex: 1;
}

.item-content {
    display: flex;
    justify-content: flex-start;
    font-size: 26rpx;
    flex: 2.4;
    color: rgb(87, 87, 87);
    /* background-color: green; */
}

.item-chevron {
    height: 20rpx;
    width: 14rpx;
}

.avatar-btn-container {
    height: 100rpx;
    width: 100rpx;
}

.avatar-btn {
    height: 100rpx;
    width: 100rpx;
    border: none;
    padding: 0;
    border-radius: 50%;
}

.avatar-container {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}

.avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.bottom-bar {
    height: 140rpx;
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 16rpx;
    /* border-top: 1px solid #ddd; */
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 999;
    /* margin-bottom: 10rpx; */
    padding-top: 20rpx;
  }

  .save-button-view {
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000000;
    color: #fff;
    font-size: 28rpx;
    /* padding: 28rpx 160rpx; */
    /* border-radius: 16rpx; */
    font-weight: 500;
    height: 90rpx;
    width: 680rpx;
  }