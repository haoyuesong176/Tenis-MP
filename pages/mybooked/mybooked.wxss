.container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    height: 100vh;
    background-color: aqua;
}

.custom-tabs {
    margin-bottom: 32rpx;
    background-color: rgb(109, 212, 77);
    margin-top: 0rpx;
    padding-top: 0rpx;
    /* flex: 1; */
}

.custom-panel {
    color: var(--td-text-color-primary);
    background-color: rgb(77, 108, 212);
}

.custom-panel__content {
    height: 100%;
    font-size: 28rpx;
    color: var(--td-text-color-placeholder);
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    background-color: #000;
}

.scroll-area {
    display: flex;
    flex-direction: column;
    height: 50rpx;
    width: 100%;
    height: 100%;
}

.block-container {
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    align-content: flex-start;
    padding-top: 12rpx;
    box-sizing: border-box;
}

.block {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 49%;
    background-color: #f0f0f0;
    color: #000;
    padding: 20rpx;
    margin-bottom: 15rpx;
    box-sizing: border-box;
}