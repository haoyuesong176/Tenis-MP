.fixed-box {
  position: absolute; 
  width: 100%;
  height: 200rpx;
  background-color: white;
  z-index: 1;
  transition: opacity 0.2s linear;
}

.corner-image {
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  width: 220rpx;   
  height: 54rpx;
  z-index: 2; 
}

.scroll-container {
  margin-top: 0rpx; 
  height: calc(100vh - 0rpx); 
  padding: 0rpx;
}

.swiper-container {
  margin: 0rpx;
  border-radius: 0rpx;
  overflow: hidden;
}

.swiper {
  width: 100%;
  height: 820rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 2. CONTACT CARD  */

.contact-info {
  margin-top: 0rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-section {
  display: flex;
  flex-direction: column;
}

.location-info {
  display: flex;
  align-items: center;
}

.court-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.distance {
  padding-left: 10rpx;
  font-size: 24rpx;
  color: #888;
}

.nav-btn {
  padding-top: 10rpx;
  display: flex;
  align-items: center;
}

.nav-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.nav-text {
  font-size: 24rpx;
  word-break: break-all;
}

.call-section {
  display: flex;
  align-items: center;
  padding: 10rpx 10rpx;
}

.phone-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 3. FUNCTIONS  */

.features {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  background: rgb(240, 240, 240);
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
  padding-left: 50rpx;
  padding-right: 50rpx;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
}

.feature-icon {
  width: 50rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.feature-text {
  font-size: 20rpx;
}

/* 4. COACH */

.coach-info {
  margin-top: 50rpx;
}

.heading-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  padding: 20rpx;
}

.coach-scroll {
  margin-top: 20rpx;
  white-space: nowrap;
  overflow: hidden;
}

.coach-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 40rpx;
}

.coach-img {
  width: 100%;
  /* 不设 height，交给 mode="widthFix" 处理 */
  display: block;
  /* border-radius: 8rpx; */
}

.coach-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  padding: 20rpx;
}

.intro-container {
  margin-top: 50rpx;
}

.intro-text {
  font-size: 24rpx;
  line-height: 1.8;
  color: #666;
  padding-inline: 36rpx;
  padding-block: 10rpx;
}

.no-more-text {
  text-align: center;
  font-size: 20rpx;
  color: #999;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}




