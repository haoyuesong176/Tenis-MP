    color: black;
    font-size: 14px;
    /* border: 1px solid #ccc; */
    min-width: 75px;
    height: 50px;
    box-sizing: border-box;
}

.date-button.active {
    background-color: black;
    color: white;
}

.date-label {
    font-size: 12px;
    font-weight: 300rpx;
}

.date-value {
    font-size: 12px;
    margin-top: 2px;
}

/* Schedule */

.scrollable-content {
    flex: 1;
    overflow: hidden;
    margin-bottom: 190rpx;
}

.schedule-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    /* background: #f9f9f9; */
    padding-right: 25rpx;
}

.schedule-scroll {
    flex: 1;
    overflow-y: scroll;
}

.header-row,
.time-row {
    display: flex;
    justify-content: center;
}

.slot {
    width: 70px;
    /* 固定列宽，确保对齐 */
    height: 36px;
    display: flex;
    align-items: center;
    /* 垂直居中 */
    justify-content: center;
    /* 水平居中 */
    box-sizing: border-box;
    /* border: 1px solid #ddd; */
    margin-inline: 8rpx;
    margin-block: 8rpx;
    /* border-radius: 16rpx; */
}

.header-cell {
    width: 70px;
    /* 固定列宽，确保对齐 */
    height: 18px;
    display: flex;
    align-items: center;
    /* 垂直居中 */
    justify-content: center;
    /* 水平居中 */
    box-sizing: border-box;
    /* border: 1px solid #ddd; */
    margin-inline: 8rpx;
    margin-block: 8rpx;
    font-size: 22rpx;
    font-weight: bolder;
}

.time-cell {
    width: 40px;
    /* 固定列宽，确保对齐 */
    height: 36px;
    display: flex;
    align-items: center;
    /* 垂直居中 */
    justify-content: center;
    /* 水平居中 */
    box-sizing: border-box;
    /* border: 1px solid #ddd; */
    margin-inline: 8rpx;
    margin-block: 8rpx;
    font-size: 22rpx;
    font-weight: bolder;
}

/* slot 状态样式 */
.available {
    background-color: #f0f0f0;
}

.booked {
    background-color: rgb(214, 214, 214);
}

.selected {
    background-color: rgb(133, 193, 221);
}

.matching {
    background-color: rgb(227, 180, 231);
}

.time-header {
    width: 40px;
    /* background: #eee; */
}

/* 底部下单栏 */

.bottom-bar {
    height: 140rpx;
    flex-shrink: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 16rpx;
    border-top: 1px solid #ddd;
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 999;
    /* margin-bottom: 10rpx; */
    padding-bottom: 40rpx;
    /* background-color: darkcyan; */
}

.switch-button {
    display: flex;
    flex-direction: column;
    margin-left: 40rpx;
    align-items: center;
}

.switch-icon {
    height: 45rpx;
    width: 45rpx;
    margin-bottom: 10rpx;
}

.switch-text {
    font-size: 19rpx;
    font-weight: light;
}

/* 右侧下单按钮（启用） */
.submit-button-view {
