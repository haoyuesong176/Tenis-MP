}

.back-button {
    position: absolute;
    left: 16px;
    width: 25rpx;
    height: 25rpx;
}

.title {
    font-size: 16px;
    font-weight: 450;
}

/* 日期 */

.date-scroll-view {
    height: 60px;
    white-space: nowrap;
    /* background: #f8f8f8; */
    /* border-bottom: 1px solid #ddd; */
    padding-top: 30rpx;
    padding-bottom: 20rpx;
    /* padding-inline: 10rpx; */
}

.date-button-container {
    display: inline-flex;
}

.date-button {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 12px;
    /* padding: 10px 14px; */
    /* border-radius: 20rpx; */
